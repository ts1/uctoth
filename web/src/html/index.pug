html(lang=lang)
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    script(
      sync
      src="https://www.googletagmanager.com/gtag/js?id=UA-131430135-1"
    )
