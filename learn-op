#!/usr/bin/env coffee
require './rejection_handler'
{ pos_array_from_str } = require './board'
Book = require './book'
argv = require 'yargs'
  .options
    o:
      alias: 'opening'
      desc: 'Opening to learn'
      default: 'F5'
      type: 'string'
      requiresArg: true
    n:
      desc: 'Number to learn'
      type: 'number'
      default: Infinity
      requiresArg: true
    d:
      alias: 'depth'
      desc: 'Evaluation depth'
      type: 'number'
      default: 6
      requiresArg: true
    w:
      alias: 'wld'
      desc: 'Depth of win-loss-draw solve'
      type: 'number'
      default: 18
      requiresArg: true
    f:
      alias: 'full'
      desc: 'Depth of full solve'
      type: 'number'
      default: 16
      requiresArg: true
    S:
      alias: 'scope'
      desc: 'UCT constant to find opening'
      default: 0
      type: 'number'
      requiresArg: true
    B:
      alias: 'book'
      desc: 'Database file'
      default: 'book.db'
      type: 'string'
      requiresArg: true
    h:
      alias: 'help'
  .strict()
  .version false
  .argv

do ->
  book = new Book argv.book, eval_depth: argv.depth, solve_wld: argv.wld, solve_full: argv.full
  await book.init()
  opening = pos_array_from_str(argv.opening)
  for i in [0...argv.n]
    await book.extend argv.scope, opening
